{
    "globals": {
        "window": true,
        "mmToPx": true,
        "$": true,
        "jQuery": true,
        "Set": true,
        "Map": true,
        "Promise": true,
        "NODE_ENV": true,
        "NODE_ENV_DEV": true,
        "isPortrait": true,
        "sleep": true,
        "getAppSize": true,
        "isMobile": true,
        "ENV": true,
        "fabric": true,
        "getDPI": true,
        "describe": true,
        "it": true,
        "API_URL": true,
        "expect": true,
        "afterEach": true,
        "PORTAL_URL": true,
        "jest": true
    },
    "env": {
        "browser": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "impliedStrict": true,
        "experimentalObjectRestSpread": true,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "semi": 1,
        "no-debugger": 1,
        "arrow-spacing": [1, { 
            "before": true, 
            "after": true 
        }],
        "constructor-super": 2,
        "generator-star-spacing": [1, {"before": true, "after": false}],
        "no-class-assign": 2,
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-duplicate-imports": 2,
        "no-new-symbol": 2,
        "no-this-before-super": 2,
        "no-useless-rename": [1, {
            "ignoreDestructuring": false,
            "ignoreImport": false,
            "ignoreExport": false
        }],
        "prefer-template": 1,
        "require-yield": 2,
        "rest-spread-spacing": [1, "never"],
        "template-curly-spacing": [1, "never"],
        "yield-star-spacing": [1, "before"],
        "init-declarations": [1, "always"],
        "no-delete-var": 2,
        "no-label-var": 1,
        "no-shadow-restricted-names": 2,
        "no-undef-init": 1,
        "no-unused-vars": 2,
        "no-undef": 2,
        "no-use-before-define": [2, { "functions": false, "classes": true }],
        "no-console": 0,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty-character-class": 2,
        "no-empty": 2,
        "no-ex-assign": 2,
        "no-extra-parens": 2,
        "no-extra-semi": 2,
        "no-func-assign": 2,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-negated-in-lhs": 2,
        "no-obj-calls": 2,
        "no-regex-spaces": 2,
        "no-sparse-arrays": 2,
        "no-unexpected-multiline": 2,
        "no-unreachable": 2,
        "no-unsafe-finally": 2,
        "use-isnan": 1,
        "valid-jsdoc": [1, { "requireReturn": false }],
        "valid-typeof": 2,
        "array-callback-return": 2,
        "dot-location": [1, "property"],
        "dot-notation": 1,
        "no-alert": 1,
        "no-caller": 2,
        "no-unused-labels": 2,
        "no-redeclare": 2,
        "no-native-reassign": 2,
        "no-multi-spaces": 1,
        "array-bracket-spacing": [1, "never"],
        "block-spacing": 1,
        "brace-style": 1,
        "comma-dangle": [1, "never"],
        "comma-spacing": 1,
        "comma-style": 1,
        "computed-property-spacing": 1,
        "indent": 1,
        "jsx-quotes": 2,
        "key-spacing": [2, {
            "singleLine": {
                "beforeColon": false,
                "afterColon": true
            },
            "multiLine": {
                "beforeColon": false,
                "afterColon": true,
                "mode": "strict"
            }
        }],
        "lines-around-comment": 1,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [1, { "max": 2, "maxEOF": 0 }],
        "no-spaced-func": 2,
        "no-whitespace-before-property": 2,
        "space-before-blocks": 1,
        "keyword-spacing": [1, {"before": true, "after": true}],
        "space-before-function-paren": [1, "never"],
        "space-in-parens": [1, "never"]
    }
}